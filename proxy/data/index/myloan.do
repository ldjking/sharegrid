	var href=afterLoginUrl||window.location.href;
	if(href.indexOf("url=")>0)
		href=href.substring(0,href.indexOf("url=")-1);
	if(!target)
		if(url.indexOf("?")>0)
			window.location.href=url+"&url="+escape(href);
		else
			window.location.href=url+"?url="+escape(href);
	else
		if(url.indexOf("?")>0)
			window.open(url+"&url="+escape(href));
		else
			window.open(url+"?url="+escape(href));
}

